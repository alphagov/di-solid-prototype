{
  "name": "di-solid-prototype",
  "version": "0.0.0",
  "private": true,
  "main": "dist/app",
  "typings": "dist/app",
  "scripts": {
    "lint": "eslint . --max-warnings=0",
    "clean": "rm -rf dist",
    "build-sass": "rm -rf dist/public/stylesheets/application.css && sass --no-source-map src/public/stylesheets/application.scss dist/public/stylesheets/application.css --style compressed",
    "copy-assets": "mkdir -p dist/public/javascripts/govuk-frontend && cp node_modules/govuk-frontend/govuk/all.js dist/public/javascripts/govuk-frontend",
    "copy-views": "mkdir -p dist/views && cp -R src/views/* dist/views",
    "build": "npm run clean && npm run build-sass && npm run copy-assets && npm run copy-views && tsc",
    "test": "npm run lint && mocha src/test",
    "start": "node .",
    "dev": "npm run build && nodemon ."
  },
  "mocha": {
    "diff": true,
    "extension": [
      "js",
      "ts"
    ],
    "timeout": 30000,
    "recursive": true,
    "require": [
      "ts-node/register"
    ],
    "exit": true
  },
  "dependencies": {
    "@inrupt/solid-client-authn-node": "^1.12.1",
    "cookie-parser": "~1.4.4",
    "cookie-session": "^2.0.0",
    "debug": "~4.3.4",
    "express": "~4.18.1",
    "govuk-frontend": "^4.2.0",
    "morgan": "~1.10.0",
    "nunjucks": "^3.2.3"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/cookie-session": "^2.0.44",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.2",
    "@types/mocha": "^9.1.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.0.0",
    "@types/nunjucks": "^3.2.1",
    "@types/sinon": "^10.0.12",
    "@types/sinon-chai": "^3.2.8",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.3",
    "chai": "^4.3.6",
    "eslint": "^8.18.0",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.18",
    "sass": "^1.53.0",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  }
}
